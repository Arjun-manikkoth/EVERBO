<%-include("../layouts/user/header.ejs")-%>
<div class="containerbox">
  <div class="navbar-outer container">
    <div class="navbar-user">
      <a href="/profile"><div class="nav-options" ><i class="fa fa-user-circle mx-3" aria-hidden="true"></i>Profile</div></a>
      <a href="/address"><div class="nav-options" ><i class="fa fa-address-card-o mx-3" aria-hidden="true"></i>My Address</div></a>
      <a href="/order"><div class="nav-options" ><i class="fa fa-cart-plus mx-3" aria-hidden="true"></i>My Orders</div></a>
      <a href="/change_password"><div class="nav-options" ><i class="fa fa-lock mx-3" aria-hidden="true"></i>Change Password</div></a>
      <a href="/logout"><div class="nav-options" ><i class="fa fa-sign-out mx-3" aria-hidden="true"></i>Logout</div></a>
    </div>
     <div class="col-lg-8 profile-box">
        <div class=" rounded bg-white mb-5 content">
              <div class="border-right">
                  <div class="p-3">
                      <div class="d-flex justify-content-between align-items-center mb-3">
                          <h4 class="text-right">Edit Address</h4>
                      </div>
                      <form action="/edit_address?id=<%=userData._id%>" method="post" onsubmit="return validateAddAddress()">
                         <%if(locals.msg){%>
                        <span class="error-msg ml-4"><%=msg%></span>
                        <%}%>
                        <div class="row mx-2">                       
                          <div class="col-md-6 mt-3">
                            <label class="labels">House no</label>
                            <input type="text" class="form-control" id="house-no" name="houseNo" placeholder="Enter house no" value="<%=userData.house_no%>">
                            <span id="house-error" class="mt-2 error-msg"></span>
                          </div>
                          <div class="col-md-6 mt-3">
                            <label class="labels">Street</label>
                            <input type="text" class="form-control" id="street" name="street" placeholder="Enter street name" value="<%=userData.street%>">
                            <span id="street-error" class="mt-2 error-msg"></span>
                          </div>                         
                          <div class="col-md-6 mt-3">
                            <label class="labels">Pincode</label>
                            <input type="text" class="form-control" id="pincode" name="pincode" placeholder="Enter pincode" value="<%=userData.pincode%>">
                            <span id="pincode-error" class="mt-2 error-msg"></span>
                          </div>
                          <div class="col-md-6 mt-3">
                            <label class="labels">Landmark</label>
                            <input type="text" class="form-control" id="landmark" name="landmark" placeholder="Enter landmark" value="<%=userData.landmark%>">
                            <span id="landmark-error" class="mt-2 error-msg"></span>
                          </div>                         
                          <div class="col-md-6 mt-3">
                            <label class="labels">District</label>
                            <input type="text" class="form-control" id="district" name="district" placeholder="Enter district" value="<%=userData.district%>">
                            <span id="district-error" class="mt-2 error-msg"></span>
                          </div>
                          <div class="col-md-6 mt-3">
                            <label class="labels">State/Region</label>
                            <input type="text" class="form-control" id="state" name="state" placeholder="state" value="<%=userData.state%>">
                            <span id="state-error" class="mt-2 error-msg"></span>
                          </div>
                        </div>
                      <div class="mt-5 mb-3 text-center">
                        <button class="btn  profile-button" type="submit">Update
                        </button>
                      </div>
                    </form>
                  </div>
              </div>
          </div>
      </div>
</div>
</div>
<%-include("../layouts/user/footer.ejs")-%>