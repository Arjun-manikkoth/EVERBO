<%-include("../layouts/user/header.ejs")-%>
     <div class="col-lg-8 profile-box">
          <div class=" rounded bg-white mb-5 content">
              <div class="border-right">
                  <div class="p-3">
                      <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">My Address</h4>
                      </div>
                      <div class="container address-box">
                        <%if(locals.addressData){%>
                          <%if(addressData.forEach((data)=>{%>
                          <div class="d-flex address-outerdiv">
                           <ul class="">&#11044</ul>
                           <div class="ml-5 address-div">
                            <span class="address"><%=data.house_no%>,<%=data.street%>,</span >
                              <span class="address"><%=data.pincode%>,<%=data.landmark%>,</span>
                              <span class="address"><%=data.district%>,<%=data.state%></span>
                           </div> 
                           <div class="button-box d-flex">
                            <div class="text-center">
                              <a href="/edit_address?id=<%=data._id%>"><button class="btn profile-button btn-sm mx-2" type="button">Edit
                              </button></a>
                            </div>
                             <div class="text-center">
                             <button class="btn  btn-sm mx-2 delete-btn" onclick="deleteAddress('<%=data._id%>')" type="button">Delete</button>
                            </div>  
                           </div>     
                          </div>
                          <%}))%>
                          <%}else if(locals.msg){%>
                            <div class="address-msg">
                              <%=msg%>
                            </div>
                          <%}%>
                      </div>
                      <div class="mt-5 mb-3 text-center">
                        <a href="/add_address"><button class="btn profile-button" type="button">Add Address</button></a>
                      </div> 
                      </div>                                                         
                   </div>
              </div>
          </div>
      </div>
</div>
<%-include("../layouts/user/footer.ejs")-%>