<%-include("../layouts/user/header.ejs")-%>
<div class="containerbox">
  <div class="navbar-outer container">
    <div class="row">
    <div class="navbar-user">
      <div class="nav-options" ><i class="fa fa-user-circle mx-3" aria-hidden="true"></i>Profile</div>
      <div class="nav-options" ><i class="fa fa-address-card-o mx-3" aria-hidden="true"></i>My Address</div>
      <div class="nav-options" ><i class="fa fa-cart-plus mx-3" aria-hidden="true"></i>My Orders</div>
      <div class="nav-options" ><i class="fa fa-lock mx-3" aria-hidden="true"></i>Change Password</div>
     </div>
     <div class="col-lg-8 profile-box">
        <div class=" rounded bg-white mb-5 content">
              <div class="border-right">
                  <div class="p-3">
                      <div class="d-flex justify-content-between align-items-center mb-3">
                          <h4 class="text-right">Profile Settings</h4>
                      </div>
                      <form action="/editProfile" method="post" onsubmit="return validateEditProfile()">
                      <div class="row mt-2">
                          <div class="col-md-12">
                            <label class="labels">Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Name" value="<%=userData.name%>">
                            <span id="name-error" class="mt-2"></span>
                          </div>      
                      </div>
                      <div class="row">
                          <div class="col-md-6 mt-3">
                            <label class="labels">Mobile No</label>
                            <input type="text" class="form-control" id="mobile-no" name="phoneNo" placeholder="Enter phone No" value="<%=userData.mobile_no%>">
                            <span id="mobile-error" class="mt-2"></span>
                          </div>
                          <div class="col-md-6 mt-3">
                            <label class="labels">Email ID</label>
                            <input type="text" class="form-control" id="email" name="email" placeholder="Enter email" value="<%=userData.email%>">
                            <span id="email-error" class="mt-2"></span>
                          </div>                          
                          <div class="col-md-6 mt-3">
                            <label class="labels">House no</label>
                            <input type="text" class="form-control" id="house-no" name="houseNo" placeholder="Enter house no" value="">
                            <span id="house-error" class="mt-2"></span>
                          </div>
                          <span id="email-error-login"></span>
                          <div class="col-md-6 mt-3">
                            <label class="labels">Street</label>
                            <input type="text" class="form-control" id="street" name="street" placeholder="Enter street name" value="">
                            <span id="street-error" class="mt-2"></span>
                          </div>
                          <span id="email-error-login"></span>
                          <div class="col-md-6 mt-3">
                            <label class="labels">Pincode</label>
                            <input type="text" class="form-control" id="pincode" name="pincode" placeholder="Enter pincode" value="">
                            <span id="pincode-error" class="mt-2"></span>
                          </div>
                          <div class="col-md-6 mt-3">
                            <label class="labels">Landmark</label>
                            <input type="text" class="form-control" id="landmark" name="landmark" placeholder="Enter landmark" value="">
                            <span id="landmark-error" class="mt-2"></span>
                          </div>                          
                      </div>
                      <div class="row mt-3">
                          <div class="col-md-6">
                            <label class="labels">Country</label>
                            <input type="text" class="form-control" id="country" placeholder="Enter country" value="">
                            <span id="country-error" class="mt-2"></span>
                          </div>
                          <div class="col-md-6">
                            <label class="labels">State/Region</label>
                            <input type="text" class="form-control" id="state" name="state" placeholder="state">
                            <span id="state-error" class="mt-2"></span>
                          </div>
                      </div>
                      <div class="mt-5 mb-3 text-center">
                        <button class="btn btn-success profile-button" type="submit">Save Changes</button>
                      </div>
                    </form>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>
</div>

<%-include("../layouts/user/footer.ejs")-%>
