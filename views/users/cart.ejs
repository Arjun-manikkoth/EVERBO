<%-include("../layouts/user/header.ejs")-%>

<%if(locals.cartData){%>
<div class="containerbox">
  <section class="h-100 gradient-custom">
    <div class="container py-3">
      <div class="row d-flex justify-content-center my-4">
        <div class="col-md-8">
          <div class="card mb-4 cart-div">
            <div class="card-header py-3">
              <h3 class="mb-0">Cart</h3>
            </div>
            <div class="card-body">

              <!-- Single item -->
               <%cartData.cart.forEach((prod)=>{%>
              <div class="row">
                <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                  <!-- Image -->
                  <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                    <img src="/images/userImages/<%=prod.productId.image%>"
                      class="w-100" alt="product image" />
                    <a href="#!">
                      <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                    </a>
                  </div>

                  <!-- Image -->
                </div>
                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                  <!-- Data -->
                  <a href="/product?prodId=<%=prod.productId._id%>"><p><h6><%=prod.productId.name%></h6></p></a>
                  <p>Category: <%=prod.productId.category.name%>'s</p>
                  <p>Color: blue</p>
                  <p>Size: M</p>
                  <button type="button" class="btn fs-remove btn-sm me-1 mb-2" onclick="removeCart('<%=prod.productId._id%>')" data-mdb-toggle="tooltip"
                    title="Remove item">
                    <i class="fa fa-trash"></i>
                  </button>
                  <a href="/add_to_wishlist?prodId=<%=prod.productId._id%>"><button type="button" class="btn fs-wishlist btn-sm mb-2" data-mdb-toggle="tooltip"
                    title="Move to the wishlist">
                    <i class="fa fa-heart"></i>
                  </button></a>
                  <!-- Data -->
                </div> 
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                  <!-- Quantity -->
                  <div class="d-flex mb-4" style="max-width: 300px">
                    <button class="btn qty-btn btn-sm px-3 me-2" id="stepup-down"
                      onclick="decQty('<%=prod.productId._id%>')">
                      <i class="fa fa-minus"></i>
                    </button>
                    <div class="form-outline">
                      <input min="1" name="quantity" value="<%=prod.productQuantity%>"id="qtyNo<%=prod.productId._id%>" type="number" class="form-control qty-form form1" readonly />
                      <label class="form-label" for="form1">Quantity</label>
                    </div>
                    <button class="btn qty-btn btn-sm px-3 ms-2"
                      onclick="incQty('<%=prod.productId._id%>')">
                      <i class="fa fa-plus"></i>
                    </button>
                  </div>
                  <!-- Quantity -->
                  <input type="hidden" id="productStock<%=prod.productId._id%>" value="<%=prod.productId.quantity%>">
                  <div class="hidden productDiscountTot" id="productDiscountTot<%=prod.productId._id%>"><%=prod.productId.discount*prod.productQuantity%></div>
                  <div class="hidden" id="productDiscountIndiv<%=prod.productId._id%>"><%=prod.productId.discount%></div>
                  <div class="hidden category-discount" id="categoryDiscount"><%=prod.productId.category.name%> <%=prod.productId.category.discount%></div>
                  <!-- Price -->
                  <div class="d-flex">
                   <span>Rs.</span>
                   <div id="price<%=prod.productId._id%>" class="cart-price"><%=prod.totalPrice%></div>
                  </div>
                  <div id="stockStatus"  class="mt-4">
                    <%if(prod.productId.quantity>0&&prod.productId.is_listed===true&&prod.productId.is_deleted===0){%>
                     In Stock
                    <%}else if(prod.productId.is_listed===false||prod.productId.is_deleted===1){%>
                     <div class="alert-text">Currently Unavailable</div> 
                   <%}else{%>
                     <div class="alert-text">Out Of Stock</div> 
                    <%}%>
                  </div>
                  <!-- Price -->
                </div>
              </div>
              <hr class="my-4" />
               <%})%>
              <!-- Single item -->
            </div>
          </div>
          <div class="card mb-4">
            <div class="card-body d-flex justify-content-end">
               <div class="text-center">
                <a href="/shop"><button class="btn mx-3 profile-button" type="button">Continue Shopping</button></a>
              </div> 
            </div>
          </div>
          <div class="card mb-4 mb-lg-0">
            <div class="card-body">
              <p><strong>We accept</strong></p>
              <img class="me-2" width="45px"
                src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                alt="Visa" />
              <img class="me-2" width="45px"
                src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                alt="Mastercard" />
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4 checkout-div">
            <div class="card-header py-3">
              <h5 class="mb-0">Order Summary</h5>
            </div>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <li
                  class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                  Products Total
                  <div>Rs. <span id="totalPrice"></span></div>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                  Shipping Charges
                  <span id="deliveryFee">Fee</span>
                </li>
                <li
                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                <div>
                 Product discount
                </div>
                <span>- Rs. <span id="productDiscountTotal">0</span></span>
              </li>
              <li
              class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 ">
              <div>
               Category discount
              </div>
              <span>- Rs. <span id="categoryDiscountTotal">0</span></span>
            </li>
            <hr>
                <li
                  class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                  <div>
                    <strong>Total Payable</strong>
                    <strong>
                      <p class="mb-0">(including Taxes)</p>
                    </strong>
                  </div>
                  <span>Rs. <strong id="priceCheckOut"></strong></span>
                </li>
              </ul>
            <button type="button" onclick="checkStock()" class="btn checkout-btn btn-lg btn-block">Go to checkout</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<%}else{%>
  <div class="empty-box">
    <div class="container-fluid  mt-100 ">
      <div class="row">
       <div class="col-md-12">
        <div class="card1">
         <div class="card-header">
         </div>
          <div class="card-body1 cart">
             <div class="col-sm-12 empty-cart-cls text-center">
               <img src="https://rukminim2.flixcart.com/www/800/800/promos/16/05/2019/d438a32e-765a-4d8b-b4a6-520b560971e8.png?q=90" width="130" height="130" class="img-fluid mb-4">
               <h4><strong>Your Cart is Empty</strong></h4>
               <%if(locals.msg){%>
                <h5 class="error-msg"><%=msg%></h5>
                <%}else{%>
               <h5>Add something to make me happy :)</h5>
               <%}%>
               <a href="/shop"><button class="btn profile-button my-3" type="button">Continue Shopping</button></a>
             </div>
         </div>
        </div>    
       </div>
      </div> 
     </div> 
  </div>
  <%}%>
<%-include("../layouts/user/footer.ejs")-%>