<%-include("../layouts/admin/header.ejs")-%>

			<div class="report-container"> 
			<div class="title-container">
				<div class="table-title">
          Orders
        </div>
				</div> 	   	
				<table class="table table-hover table-responsive">
					<thead>
						<tr>
							<th class="col-3" scope="col">User</th>
							<th class="col-2" scope="col">Order Date</th>
							<th class="col-2" scope="col">Order Status</th>
							<th class="col-1" scope="col">Payment</th>
							<th class="col-2" scope="col">Total Amount</th>						
							<th class="col-2" scope="col">Actions</th>
						</tr>
					</thead>
					<tbody>
				 <%if(locals.orderData){%>	
					<%orderData.forEach((prod)=>{%>
						<tr>
									<td><%=prod.userId.name%></td>
									<td><%=prod.orderDate%></td>
									<td><%=prod.orderStatus%></td>
									<td><%=prod.paymentType%></td>
									<td><%=prod.grandTotalCost%></td>
									<td>
										<div class="categ-edit">
											<a href="/admin/order_detail?id=<%=prod._id%>" class=" categ-edit "><button type="button" class="btn btn-success btn-sm">View</button></a>
										</div>
									</td>							
						</tr>
						<%})%>
						<%}else{%>
							<div class="address-msg">
								<%=msg%>
							</div>
							<%}%>
					</tbody>
			</table>
	 </div> 
	<%-include("../layouts/admin/footer.ejs")-%>